{
  "extends": "@shelf/tsconfig/backend",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
    "emitDeclarationOnly": false,
    "isolatedModules": false,
    "verbatimModuleSyntax": false,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "src/**/*.test.ts"],
  "include": ["src"]
}
